<p class="text-danger"><%= flash[:notice] %></p>
<div class="row top">
  <div class="col-1"></div>
  <div class="col-10">
    <!--<p><img src="/assets/cafe.jpg" alt="#" class="img"><p>-->
      <div id="container2">
        <div id="theTarget">
          <div class="image1 img-rounded"></div>
          <div class="image2 img-rounded"></div>
          <div class="image3 img-rounded"></div>
          <div class="image4 img-rounded"></div>
          <div class="image5 img-rounded"></div>
        </div>
      </div>
  </div>
</div>

<hr class="my-10">

<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
    <table class='table table-hover table-light'>
      <thead>
        <tr>
          <th></th>
          <th>Blog新着</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td></td>
            <td><%= link_to blog.title,blog, class: "blog_#{blog.id}" %></td>
            <td><%= blog.created_at %></td>
            <td>
              <%= link_to(blog.user) do %>
              <%= attachment_image_tag(blog.user, :image, format: 'jpeg', size: "30x30", fallback: "no-image-icon.jpg") %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr class="my-10">

<div class="row">
  <div class="col-1"></div>
  <div class="col-10 d-flex justify-content-between">
    <h5>photo新着3件</h5>
    <% @photos.each do |photo| %>
    <div class="col-12 col-md-2 col-lg-2">
      <%= link_to photo_path(photo) do %>
      <%= attachment_image_tag(photo, :image, size: "200x200") %>
      <% end %>
      <%= attachment_image_tag(photo.user, :image, format: 'jpeg', size: "30x30", fallback: "no-image-icon.jpg") %>
      <%= link_to photo.user do %>
      <%= photo.user.name%>
      <% end %>
      <!-- いいね機能 -->
      <p id="favorite-<%= photo.id %>">
      <%= render partial: 'favorites/favorite', locals: { photo: photo } %>
      </p>
    </div>
    <% end %>
  </div>
  <div class="col-1"></div>
</div>
