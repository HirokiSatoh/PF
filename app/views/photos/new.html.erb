<div class="container">
  <h1>画像投稿</h1>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <% if @photo.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>
      <%= form_for(@photo, url: {controller: "photos", action: "create"}) do |f| %>
      <div class="col-xs-5 col-xs-offset-2">
        <div class="field">
          <label class="image">画像</label>
          <%= f.attachment_field :image %>
        </div>
      </div>

      <div class="col-xs-10 col-xs-offset-1">
        <table class='table table-hover table-inverse'>
        <tr>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td>ひとこと</td>
          <td><%= f.text_area :body, class: 'form-control' %></td>
        </tr>
        </table>
        <div class="actions">
          <%= f.submit "投稿", class: "btn btn-primary pull-right" %>
        </div>
      </div>
      <% end %>
  </div>
</div>
