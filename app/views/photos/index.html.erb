<div class="container">
<div class="row">
<h2>Photos</h2>
  <% @photos.each do |photo| %>
  <div class="col-xs-12 col-md-6 col-lg-3">
    <%= link_to photo_path(photo) do %>
    <%= attachment_image_tag(photo, :image, size: "200x200") %>
    <% end %>
    <p>
    <%= attachment_image_tag(photo.user, :image_id, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
    <%= link_to photo.user do %>
    <%= photo.user.name%>
    <% end %>
  </div>
  <% end %>
</div>
</div>
