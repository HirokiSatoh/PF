<div class="container">
<h2>Photos</h2>
<div class="row">
  <% @photos.each do |photo| %>
  <div class="col-12 col-md-8 col-lg-4">
    <%= link_to photo_path(photo) do %>
    <%= attachment_image_tag(photo, :image, size: "200x200") %>
    <% end %>
    <%= attachment_image_tag(photo.user, :image, format: 'jpeg', size: "30x30", fallback: "no-image-icon.jpg") %>
    <%= link_to photo.user do %>
    <%= photo.user.name%>
    <% end %>
    <!-- いいね機能 -->
    <% if photo.favorited_by?(current_user) %>
      <%= link_to photo_favorites_path(photo, redirect_id: 0), method: :delete do %>
        <%#= fa_icon "heart", text: "#{book.favorites.count}", style: "color: red;" %>
        <span class="fas fa-heart"><%= photo.favorites.count%></span>
      <% end %>
    <% else %>
      <%= link_to photo_favorites_path(photo, redirect_id: 0), method: :post do %>
        <%#= fa_icon "heart-o", text: "#{book.favorites.count}", style: "color: red;" %>
        <span class="far fa-heart"><%= photo.favorites.count %></span>
      <% end %>
    <% end %>
  </div>
  <% end %>
</div>
</div>
