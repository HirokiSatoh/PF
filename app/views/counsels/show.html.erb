<div class="container">
  <div class="flash">
    <%= flash[:notice] %>
  </div>
  <h1>相談内容</h1>
  <div class="row">
    <div class="col-5">
      <%= attachment_image_tag @counsel, :image, format: 'jpeg', size: "150x150" %>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <p>[タイトル]<%= @counsel.title %></p>
      <p>[質問内容]<%= simple_format(@counsel.body) %></p>
      <p> 投稿者: <%= link_to(@counsel.user) do %>
        <%= attachment_image_tag(@counsel.user, :image, format: 'jpeg', size: "50x50", fallback: "no-image-icon.jpg") %>
        <%= @counsel.user.name %></p>
        <% end %>
    <% if @counsel.user == current_user %>
          <p><%= link_to 'Edit', edit_counsel_path(@counsel), class: "btn-sm btn-success edit_counsel_#{@counsel.id}" %></p>
          <p><%= link_to 'Destroy', @counsel, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger destroy_counsel_#{@counsel.id}"%></p>
        <% end %>
    </div>
  </div>
    <div class="row">
    <div class="col-3">
      <h3>コメント</h3>
      <%= form_for [@counsel, @counsel_comment] do |f| %>
        <%= f.text_area :comment %>
        <%= f.submit '送信' %>
      <% end %>
    </div>
     <div class="col-9">
        <table class="table table-borderless table-sm">
          <thead>
          <tr>
            <th></th>
            <th></th>
            <th colspan="3"></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
      <% @counsel_comments.each do |counsel_comment| %> <!-- コメント一覧 -->
        <tr>
          <td>
            <%= link_to user_path(counsel_comment.user), class: "user_#{counsel_comment.user.id}" do %>
              <%= attachment_image_tag counsel_comment.user, :image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg", size: "50x50" %>
              <%= counsel_comment.user.name %>
            <% end %>
          </td>
          <td><%= simple_format(counsel_comment.comment) %></td>
          <td></td>
          <% unless current_user != counsel_comment.user %>
            <td><%= link_to 'Destroy', counsel_counsel_comments_path(counsel_comment.id), class: 'btn-sm btn-danger', method: :delete, data: { confirm: '本当に消しますか？' } %></td>
          <% end %>
        </tr>
      </div>
      <% end %>
    </tbody>
    </div>
    </table>
</div>
