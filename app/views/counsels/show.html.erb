<div class="container">
  <div class="flash">
    <%= flash[:notice] %>
  </div>
  <h1>相談内容</h1>
  <div class="row">
    <div class="col-5">
      <%= attachment_image_tag @counsel, :image, format: 'jpeg', size: "150x150" %>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <p>[タイトル]<%= @counsel.title %></p>
      <p>[質問内容]<%= simple_format(@counsel.body) %></p>
      <p> 投稿者: <%= link_to(@counsel.user) do %>
        <%= attachment_image_tag(@counsel.user, :image, format: 'jpeg', size: "50x50", fallback: "no-image-icon.jpg") %>
        <%= @counsel.user.name %></p>
        <% end %>
    <% if @counsel.user == current_user %>
          <p><%= link_to 'Edit', edit_counsel_path(@counsel), class: "btn-sm btn-success edit_counsel_#{@counsel.id}" %></p>
          <p><%= link_to 'Destroy', @counsel, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger destroy_counsel_#{@counsel.id}"%></p>
        <% end %>
    </div>
  </div>
    <h2>comments</h2>
    <% @counsel_comments.each do |comment| %>
      <% if comment.parent_id.present? || comment.id.blank? %>
        <% next %>
      <% end %>
        <hr>
        <p> <%= comment.user.name %> : <%= comment.comment %></p>
        <p> date : <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
      <div id="reply_area">
        <% comment.replies.order(:created_at).each do |reply| %>
        <p> <%= comment.user.name %> : <%= reply.comment %></p>
        <% end %>
      </div>
        <%= form_with(model:[@counsel,@counsel_comment_reply]) do |form| %>
        <div class="row">
          <div class="form-group col-md-6">
            <p><label>Reply</label></p>
            <textarea class="form-control input-form" name="counsel_comment[comment]" rows="2"><%= @counsel_comment_reply.comment %></textarea>
          </div>
        </div>
          <%= form.hidden_field :counsel_id, value: @counsel.id %>
          <%= form.hidden_field :parent_id, value: comment.id%>
        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    <% end %>

    <%= form_with(model:[@counsel,@counsel_comment]) do |form| %>
      <p><label>New Thread</label></p>
      <textarea class="form-control input-form" name="counsel_comment[comment]" rows="5"><%= @counsel_comment.comment %></textarea>
      <%= form.hidden_field :counsel_id, value: @counsel.id %>
        <div class="actions">
          <%= form.submit %>
        </div>
    <% end %>
  </div>
