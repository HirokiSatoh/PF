<div class="container">
<div class="row">
<h3><strong>「<%= @content %>」</strong>の検索結果 <%= @datas.count %>件です！</h3>
<br>
<div class="col-10">
<table class='table table-hover table-inverse'>
  <% if @model == 'blog' %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @datas.each do |data| %>
        <tr>
          <td></td>
          <td><%= link_to data.title,@blog, class: "data_#{data.id}" %></td>
          <td><%= data.created_at %></td>
          <td>
            <%= link_to(data.user) do %>
            <%= attachment_image_tag(data.user, :image, format: 'jpeg', size: "30x30", fallback: "no-image-icon.jpg") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else @model == 'user' %>
    <thead>
      <tr>
        <th>氏名</th>
      </tr>
    </thead>
    <tbody>
      <% @datas.each do |data| %>
      <tr>
        <td>
          <%= attachment_image_tag(data, :image, format: 'jpeg', size: "30x30", fallback: "no-image-icon.jpg") %>
        <%= link_to user_path(data) do %>
          <%= data.name %>
        <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
  </table>
</div>
</div>
</div>
