<div class="container">
<div class="row">
<div class="col-xs-10">
<table class='table'>
  <tr><%= attachment_image_tag(@user, :image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg") %></tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
    <% if @user == current_user %>
      <th><%= link_to 'Edit', user_emend_path(@user), class: "btn-sm btn-success user_emend_#{@user.id}" %></th>
      <th><%= link_to "いいねした画像", favorites_users_path %></th>
    <% end %>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to @user.follower.count, user_follows_path(@user) %></th>
    <th>followers</th>
    <th><%= link_to @user.followed.count, user_followers_path(@user) %></th>
  </tr>
<!-- フォローボタン -->
<% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn btn-success" %>
  <% end %>
<% end %>
</table>
</div>
</div>
</div>
