<div class="container">
  <div class="row">
    <div class="col-10">
    <h3>いいね一覧</h3>
    <table class='table table-hover table-light'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% current_user.favorite_photos.each do |photo| %>
            <tr>
              <td></td>
              <td><%= link_to photo_path(photo) do %>
                  <%= attachment_image_tag(photo, :image, size: "200x200") %>
                  <% end %></td>
              <td><%= attachment_image_tag(photo.user, :image, format: 'jpeg', size: "30x30", fallback: "no-image-icon.jpg") %></td>
              <td>
                <%= link_to photo.user do %>
                <%= photo.user.name%>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>