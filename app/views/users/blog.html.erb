<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <h2>ブログ一覧</h2>
      <table class='table table-hover table-light'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td></td>
              <td><%= link_to blog.title,blog, class: "blog_#{blog.id}" %></td>
              <td><%= blog.created_at %></td>
              <td>
                <%= attachment_image_tag(blog.user, :image, format: 'jpeg', size: "30x30", fallback: "no-image-icon.jpg") %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <div class="text-center">
          <%= paginate @blogs %>
        </div>
      </table>
    </div>
  </div>
</div>
