<div class="container">
<div class="row">
<h2>User info</h2>
<div class="col-xs-10">
<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :ニックネーム %>
    <%= f.text_field :name, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :プロフィール画像 %>
    <%= f.attachment_field :image, class: "user_image" %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %>
    <%= f.text_area :introduction, class: "introduction" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
</div>
</div>
