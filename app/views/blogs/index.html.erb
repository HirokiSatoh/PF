<div class="container">
<div class="row">
<h2>ブログ一覧</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td></td>
        <td><%= link_to blog.title,blog, class: "blog_#{blog.id}" %></td>
        <td><%= blog.created_at %></td>
        <td>
          <%= link_to(blog.user) do %>
          <%= attachment_image_tag(blog.user, :image_id, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
