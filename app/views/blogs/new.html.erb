<div class="container">
  <h1>ブログ投稿画面</h1>
    <div class="col-sm-10 offset-sm-1">
      <% if @blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>
      <%= form_for(@blog, url: {controller: "blogs", action: "create"}) do |f| %>
      <div class="col-sm-10 offset-sm-1">
        <table class='table table-hover table-inverse'>
        <tr>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td>タイトル</td>
          <td><%= f.text_field :title, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>投稿内容</td>
          <td><%= f.text_area :body, 'data-provider': :summernote %></td>
        </tr>
        <tr>
          <td>カテゴリー</td>
          <td>
            <%= f.collection_select :category_id, @categories, :id, :name,include_blank: "--選択してください--" %>
          </td>
        </tr>
        </table>
        <div class="actions">
          <%= f.submit "投稿", class: "btn btn-primary pull-right" %>
        </div>
      </div>
      <% end %>
</div>
