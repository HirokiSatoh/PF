<% if user_signed_in? %>
  <% if photo.favorited_by?(current_user) %>
    <%= link_to photo_favorites_path(photo, redirect_id: 0), method: :delete, remote: true do %>
      <span class="fas fa-heart"><%= photo.favorites.count%></span>
    <% end %>
  <% else %>
    <%= link_to photo_favorites_path(photo, redirect_id: 0), method: :post, remote: true do %>
      <span class="far fa-heart"><%= photo.favorites.count %></span>
    <% end %>
  <% end %>
<% else %>
 <span>いいね：<%= photo.favorites.count %>件</span>
<% end %>