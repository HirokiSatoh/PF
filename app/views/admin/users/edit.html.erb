<div class="container">
  <h2><%= @user.name %>さんの会員情報編集</h2>
  <div class="col-10 col-xs-offset-1">
      <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
    </div>
  <div class="row">
    <%= form_for(@user, url: {controller: "admin/users", action: "update"}) do |f| %>
    <div class="col-xs-8 col-xs-offset-2">
      <table class='table table-hover table-inverse'>
        <tr>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td>会員ID</td>
          <td>
            <%= @user.id %>
          </td>
        </tr>
        <tr>
          <td>ニックネーム  </td>
          <td>
            <%= f.label :name　%>
            <%= f.text_field :name, autofocus: true %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_valid, true,  class: :rd %>有効
            <%= f.radio_button :is_valid, false,  class: :rd %>退会済み
          </td>
        </tr>
      </table>
      <div>
         <%= f.submit '編集内容を保存する', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  </div>
</div>