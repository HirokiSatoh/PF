<div class="container">
  <p class="text-danger"><%= flash[:notice] %></p>
  <h2><%= @user.name %>さんの会員詳細</h2>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <table class='table table-hover table-inverse'>
        <tr>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %>
              <% if @user.is_valid? %>
                  <span class="bg-primary p-2 rounded">
                  有効会員
                  </span>
              <% else %>
              <span class="bg-danger p-2 rounded">
                    退会済
                  </span>
              <% end %>
          </td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <div>
        <%= link_to '編集する', edit_admin_user_path(@user), class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>