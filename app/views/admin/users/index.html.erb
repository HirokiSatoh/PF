<div class="container">
  <h1>会員一覧</h1>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name ,admin_user_path(user.id) %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_valid? %>
              <p>有効</p>
            <% else %>
              <p>退会済</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
  </div>
</div>